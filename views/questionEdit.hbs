{{> header }}

<h1 class = "text-center">Question Editing</h1>
    {{#each question}}
    <form method = "POST">
        
        <input type = "hidden" name = "questId" value = "{{this.questionID}}">
        <div class = "container text-center border border-primary round" id = "questionbox">
        
         <button class = "float-right trigger" type = "submit">Delete</button>
         <div class = "modal">
             <div class = "modal-content">
                 <span class = "close-button"></span>
                 <h2>Are you sure that you want to delete?</h2>
                 <button name = "edit" value = "delete">Of course</button>
             </div>
         </div>
         <button class = "float-right" name = "edit" value = "update"  type = "submit">Update</button>
        <p>{{this.question}}</p>
       

        <p>Answer: {{this.answer}}</p>
        </div>
        <br>
        
    </form>
    {{/each}}
    <script src = "../jscript/modal.js"></script>
</body>
</html>